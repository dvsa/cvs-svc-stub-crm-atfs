{
  "name": "cvs-svc-test-station",
  "version": "1.0.0",
  "description": "Test Station service that stores and serves the Test Stations data",
  "main": "handler.js",
  "scripts": {
    "start": "npm run eslint && BRANCH=local ./node_modules/serverless/bin/serverless offline start",
    "start:test": "npm run eslint && node_modules/gulp/bin/gulp.js start-serverless",
    "end:test": "node_modules/gulp/bin/gulp.js kill-serverless",
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/serverless/bin/serverless offline start",
    "test": "BRANCH=local ./node_modules/.bin/mocha tests/**/*.unitTest.js",
    "test-i": "node_modules/.bin/mocha tests/**/*.intTest.js",
    "prepush": "npm test && npm run eslint && npm run security-checks",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "eslint": "eslint . --config=.eslintrc.json --fix  -f json -o report.json",
    "sonar-scanner": "npm run eslint && npm run coverage && sonar-scanner",
    "coverage": "nyc mocha tests/unit/*.unitTest.js && nyc report --reporter=lcov",
    "audit-dep": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.455.0",
    "aws-xray-sdk": "^2.3.2",
    "node-yaml": "^3.1.1",
    "path-parser": "^4.2.0"
  },
  "devDependencies": {
    "audit-filter": "^0.4.3",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect": "^24.8.0",
    "gulp": "^4.0.2",
    "lambda-tester": "^3.5.0",
    "mocha": "^4.1.0",
    "nyc": "^13.3.0",
    "serverless": "^1.42.3",
    "serverless-dynamodb-local": "^0.2.37",
    "serverless-offline": "^3.33.0",
    "serverless-plugin-tracing": "^2.0.0",
    "standard": "^12.0.1",
    "supertest": "^3.4.2"
  }
}
