{
  "name": "crm-stub-service",
  "version": "1.0.0",
  "description": "CRM-stub service that stores and serves the Test Stations data",
  "main": "handler.js",
  "scripts": {
    "start": "npm run eslint && ./node_modules/serverless/bin/serverless offline start",
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/serverless/bin/serverless offline start",
    "test": "node_modules/.bin/mocha tests/**/*.unitTest.js",
    "test-i": "node_modules/.bin/mocha tests/**/*.intTest.js",
    "prepush": "npm test && npm run eslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "eslint": "eslint . --config=.eslintrc.json --fix",
    "sonar-scanner": "echo TODO"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.332.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect": "^21.2.1",
    "mocha": "^4.0.1",
    "serverless": "^1.23.0",
    "serverless-offline": "^3.27.0",
    "serverless-openapi-documentation": "^0.4.0",
    "standard": "^12.0.1",
    "supertest": "^3.0.0",
    "swagger-ui-watcher": "^2.1.5"
  }
}
